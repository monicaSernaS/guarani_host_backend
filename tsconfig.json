{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src", "src/@types"],
  "exclude": ["node_modules", "tests"]
}
